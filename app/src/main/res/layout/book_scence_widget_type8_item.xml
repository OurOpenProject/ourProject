<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x106"
    android:layout_height="@dimen/x140">

    <ImageView
        android:id="@+id/type8_item_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x106"
        android:scaleType="fitXY"
        android:background="@color/colorImgBg"/>
    <ImageView
        android:id="@+id/type8_item_author_image"
        android:layout_width="@dimen/x35"
        android:layout_height="@dimen/x35"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x85"/>
    <TextView
        android:id="@+id/type8_item_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/y5"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:layout_alignParentRight="true"/>

</RelativeLayout>