<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x107"
    android:layout_height="@dimen/y120"
    android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/x106"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y70">
                <ImageView
                    android:id="@+id/type5_item_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="@color/colorBg"/>
                <ImageView
                    android:id="@+id/type5_item_video"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:src="@drawable/book_list_play"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y50"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10">
                <TextView
                    android:id="@+id/type5_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:lines="1"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/type5_item_content"
                    android:layout_marginTop="@dimen/y4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:lines="2"
                    android:ellipsize="end"/>
            </LinearLayout>
        </LinearLayout>

       <View
           android:layout_width="@dimen/x1"
           android:layout_height="match_parent"
           android:background="@color/colorWhite"/>

</LinearLayout>