<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ourproject.ui.book.activity.QR_codeActivity">

    <RelativeLayout
        android:id="@+id/qr_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40">
        <ImageView
            android:id="@+id/qr_back"
            android:layout_width="@dimen/y40"
            android:layout_height="match_parent"
            android:src="@mipmap/lib_ic_ab_back_black"
            android:padding="@dimen/x13"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫一扫"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/qr_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey"/>
</RelativeLayout>
