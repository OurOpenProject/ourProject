<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y195"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y5"
        android:background="@color/colorBg"/>
    <LinearLayout
        android:id="@+id/type8_title_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y35"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/type8_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日品"
            android:textSize="16sp"
            android:textColor="#000000"
            android:drawableRight="@mipmap/ic_scene_more"
            android:drawablePadding="@dimen/x10"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/type8_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x140"
        android:orientation="horizontal">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom">
        <TextView
            android:id="@+id/type8_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>

</LinearLayout>